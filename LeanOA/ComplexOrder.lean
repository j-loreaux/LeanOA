lemma ofReal_iSup {Œπ : Type*} {f : Œπ ‚Üí ‚Ñù} :
    ofReal (‚®Ü i, f i) = ‚®Ü i, ofReal (f i) := by
  obtain (h | h) := isEmpty_or_nonempty Œπ
